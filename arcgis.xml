<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/buttonncreata"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="124dp"
        android:layout_height="76dp"
        android:layout_alignBottom="@+id/btnupdatea"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="201dp"
        android:layout_marginBottom="-10dp"
        android:text="@string/save_new_register"
        android:textColor="#33691E" />

   <com.esri.arcgisruntime.mapping.view.MapView
       android:id="@+id/arcid1"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="320dp"
       />


    <ImageButton
        android:id="@+id/btnLocation"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="350dp"
        android:background="@null"
        android:contentDescription="@string/my_location"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_my_location_selector" />

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="16dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnZoomIna"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="@string/zoomIn"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_zoom_in_selector"
            />

        <ImageButton
            android:id="@+id/btnZoomOuta"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="@string/zoomOut"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_zoom_out_selector"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="500dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="@string/id"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/id11a"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autofillHints=""
            android:fontFamily="@font/alice"
            android:hint="@string/idsql"
            android:inputType="number"
            android:labelFor="@+id/id"
            android:textColor="@color/black"
            android:textColorHint="#33691E" />

        <Button
            android:id="@+id/btnsearcha"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_weight="1"
            android:foreground="@drawable/search_icon"
            android:text="@string/search"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="@string/hive_idlc"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/hiveid8a"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autofillHints=""
            android:hint="@string/id_lc"
            android:textAlignment="center"
            android:inputType="number"
            android:labelFor="@id/hiveid8"
            android:textColor="@color/black"
            android:textColorHint="#33691E" />

    </LinearLayout>

    <Button
        android:id="@+id/btn2csva"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="119sp"
        android:layout_height="64sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="262dp"
        android:text="@string/export_csv"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="52dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="21dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="@string/date_lc"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/date11a"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:fontFamily="@font/alice"
            android:hint="@string/dd"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#33691E" />

        <TextView
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="@string/month"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/month8a"
            android:layout_width="76dp"
            android:layout_height="60dp"
            android:autofillHints=""
            android:fontFamily="@font/alice"
            android:hint="@string/mm"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#33691E"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="@string/year"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/year8a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autofillHints=""
            android:hint="@string/_20xx"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#33691E"
            tools:ignore="DuplicateSpeakableTextCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="116dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="@string/geographic_coordinates"
            android:textColor="@color/black"
            tools:ignore="InefficientWeight" />

        <EditText
            android:id="@+id/getlocationa"
            android:layout_width="249dp"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:fontFamily="@font/alice"
            android:hint="@string/hive_location"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="#33691E" />
    </LinearLayout>

    <Button
        android:id="@+id/btnupdatea"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="153sp"
        android:layout_height="62sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:text="@string/update_record"
        android:textColor="@color/purple_500" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="195dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="@string/noteslc"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/notes11a"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autofillHints=""
            android:fontFamily="@font/alice"
            android:hint="@string/notes_lc"
            android:inputType="textPersonName"
            android:labelFor="@id/notes11"
            android:textColor="@color/black"
            android:textColorHint="#33691E"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>


</RelativeLayout>